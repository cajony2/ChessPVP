<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Game"
        android:id="@+id/createGameBtn"
        android:layout_marginTop="27dp"
        android:minWidth="200dp"
        android:layout_alignTop="@+id/psw"
        android:layout_alignLeft="@+id/logIn"
        android:layout_alignStart="@+id/logIn" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:text="First name"
        android:shadowRadius="2"
        android:shadowColor="#0000ff"
        android:shadowDx="2"
        android:shadowDy="4"
        android:background="@drawable/edittext"
        android:layout_above="@+id/createGameBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/psw"
        android:text="Password"
        android:layout_marginBottom="194dp"
        android:background="@drawable/edittext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/logIn"
        android:minWidth="200dp"
        android:layout_below="@+id/createGameBtn"
        android:layout_alignLeft="@+id/createUser"
        android:layout_alignStart="@+id/createUser" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new User"
        android:id="@+id/createUser"
        android:layout_below="@+id/logIn"
        android:minWidth="200dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Game"
        android:id="@+id/joinGame"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/createUser"
        android:minWidth="200dp" />

</RelativeLayout>
